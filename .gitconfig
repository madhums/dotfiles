[alias]
  cm = commit -m
  cma = commit -am
  st = status
  co = checkout
  df = diff
  cl = clone
  lg = log --graph --format=format:'%Cred%h%Creset %C(yellow)%an%d%Creset %s %Cgreen(%cr)%Creset'
  lg2 = log --graph --all --format=format:'%C(bold yellow)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)' --abbrev-commit
[user]
  name = Madhusudhan Srinivasa
  email = me@madhums.me
  signingkey = 9D4BF17858FFB6A4
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[github]
  user = madhums
[core]
  excludesfile = ~/.git-global-ignore
	autocrlf = true
	whitespace = cr-at-eol
	safecrlf = false
[push]
	default = current
[branch]
  autosetuprebase = always
[credential]
	helper = osxkeychain
[url "git@github.com:"]
	insteadOf = https://github.com/
[merge]
  ff = no
  commit = no
[pull]
	rebase = true
[commit]
  gpgsign = true
[gpg]
  program = gpg2
